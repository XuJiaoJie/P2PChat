<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/color_text_login</item>
    </style>

    <!--登录注册-->
    <style name="LoginAndRegisterTheme" parent="AppTheme">
        <item name="colorAccent">@color/color_text_login</item>
        <item name="colorControlNormal">@color/color_text_login</item>
        <item name="colorControlActivated">@color/color_text_login</item>
    </style>

    <style name="EditTextStyle" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@drawable/bg_et_cursor_login</item>
        <item name="android:textColorHint">@color/color_text_login</item>
    </style>

    <!-- 字体样式 start -->
    <style name="chat_date_style">
        <item name="android:textColor">#F5F5F5</item>
        <item name="android:background">#BEBDBE</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>
